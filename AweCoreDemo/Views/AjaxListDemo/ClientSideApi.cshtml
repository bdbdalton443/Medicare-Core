@{
    ViewBag.Title = "AjaxList Client Side API";
}
    <h1>AjaxList Client Side Api</h1>
<div class="awe-il">
<textarea id="vs" cols="70" rows="7">
$('#MealsApiDemo').data('api').load(
{
    params: { meal : 'Mango'}
});
</textarea><br/>
<button type="button" id="bApi" class="awe-btn">Execute</button>
</div>
    
    <ul id="samples" class="samples awe-il">
            <li><button type="button" class="awe-btn">Meal contains o</button>
<div class="hidden">$('#MealsApiDemo').data('api').load(
    {
        params: { meal : 'o' }
    });
        </div>
        </li>
        <li><button type="button" class="awe-btn">Where Meal contains Mango</button>
<div class="hidden">$('#MealsApiDemo').data('api').load(
    {
        params: { meal : 'Mango' }
    });
        </div>
        </li>
         <li><button type="button" class="awe-btn">Set pageSize = 3</button>
<div class="hidden">$('#MealsApiDemo').data('api').load(
    {
        params: { pageSize : 3 }
    });
        </div>
        </li>
    </ul>
    
    <script type="text/javascript">
        $(function () {
            $('#bApi').click(function () {
                eval($('#vs').val());
            });

            $('#samples .awe-btn').click(function () {
                $('#vs').val($(this).next().html());
                $('#bApi').click();
            });
        });
    </script>
    <br/>
    <br/>
     @Html.Awe().AjaxList("MealsApiDemo")
     <br/>
@Html.Csource("Awesome/AjaxList/MealsApiDemoAjaxListController.cs")