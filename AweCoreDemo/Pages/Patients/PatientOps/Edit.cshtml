<script type="text/javascript">
    function showNext(item, baseUrl) {
        if (item.value == '1') {
            //$("#myCarousel").carousel(0);
            //document.getElementById("armNumber").style.visibility = "hidden";
            //document.getElementById("armNumber").style.visibility = "none";
            $("#armyNumber").hide();
            $("#armyServiceCode").hide();
            $("#armyStatus").hide();
            $("#armyUnit").hide();
            $("#armyRank").hide();
            $("#family").hide();
            $("#orgtn").hide();
        }
        else if (item.value == '2') {
            $("#armyNumber").show();
            $("#armyServiceCode").show();
            $("#armyStatus").show();
            $("#armyUnit").show();
            $("#armyRank").show();
            $("#family").hide();
            $("#orgtn").hide();
        }
    }
