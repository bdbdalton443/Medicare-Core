@page
@model AweCoreDemo.Pages.Finance.FinanceSettings.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillItem[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillItem[0].BillItemType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillItem[0].Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillItem[0].Test)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillItem[0].HService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillItem[0].CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillItem[0].UpdatedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BillItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillItemType.BillItemTypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.ItemID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Test.TestID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HService.HServiceID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedOn)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BillItemID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BillItemID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BillItemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
