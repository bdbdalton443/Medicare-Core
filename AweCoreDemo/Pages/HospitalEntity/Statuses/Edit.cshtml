@page
@model DemoHms.Pages.HospitalEntity.Statuses.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Root.cshtml";
}

<h1>Edit</h1>

<h4>Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Status.StatusID" />
            <div class="form-group">
                <label asp-for="Status.Name" class="control-label"></label>
                <input asp-for="Status.Name" class="form-control" />
                <span asp-validation-for="Status.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status.Description" class="control-label"></label>
                <input asp-for="Status.Description" class="form-control" />
                <span asp-validation-for="Status.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
