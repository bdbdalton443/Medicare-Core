@page
@model DemoHms.Pages.HospitalEntity.Modules.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Root.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Module) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ModuleID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ModuleID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ModuleID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
