@page
@model DemoHms.Pages.Items.ItemTypes.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Home.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemType[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemType[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemType[0].SubGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemType[0].RefSubGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemType[0].CompleteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemType[0].ItemSubGroup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ItemType) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefSubGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompleteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemSubGroup.ItemSubGroupID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ItemTypeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ItemTypeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ItemTypeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
