@page
@model DemoHms.Pages.Items.CreateModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<DemoHms.ApplicationUser> SignInManager
@inject UserManager<DemoHms.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Home.cshtml";
}

<h1>Create</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-11" style="margin:auto;">
        <div class="card shadow mb-12">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">New Item Details</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink14" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink14">
                        <div class="dropdown-header">Actions:</div>
                        <a class="dropdown-item" href="#">Reset Form</a>
                        <a class="dropdown-item" href="#">Save</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container-fluid">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Item.Name" class="control-label"></label>
                                    <input asp-for="Item.Name" class="form-control" style="width:100%"/>
                                    <span asp-validation-for="Item.Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Item.Code" class="control-label"></label>
                                    <input asp-for="Item.Code" class="form-control" style="width:100%"/>
                                    <span asp-validation-for="Item.Code" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Item.TradeName" class="control-label"></label>
                                    <input asp-for="Item.TradeName" class="form-control" style="width:100%"/>
                                    <span asp-validation-for="Item.TradeName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Item.PackageName" class="control-label"></label>
                                    <input asp-for="Item.PackageName" class="form-control" style="width:100%"/>
                                    <span asp-validation-for="Item.PackageName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Item.ItemsPerPkg" class="control-label"></label>
                                    <input asp-for="Item.ItemsPerPkg" class="form-control" style="width:100%"/>
                                    <span asp-validation-for="Item.ItemsPerPkg" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Item.PackageDesc" class="control-label"></label>
                                    <input asp-for="Item.PackageDesc" class="form-control" style="width:100%"/>
                                    <span asp-validation-for="Item.PackageDesc" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Item.Manufacturer" class="control-label"></label>
                                    <input asp-for="Item.Manufacturer" class="form-control" style="width:100%"/>
                                    <span asp-validation-for="Item.Manufacturer" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Item.ItemUnit" class="control-label"></label>
                                    <select asp-for="Item.ItemUnitID" class="form-control" asp-items="ViewBag.ItemUnitID"></select>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Item.SupplierID" class="control-label"></label>
                                    <select asp-for="Item.SupplierID" class="form-control" asp-items="ViewBag.SupplierID"></select>
                                    <span asp-validation-for="Item.SupplierID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Item.ItemTypeID" class="control-label"></label>
                                    <select asp-for="Item.ItemTypeID" class="form-control" asp-items="ViewBag.ItemTypeID"></select>
                                </div>
                                <div class="form-group" style="text-align:right">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                        <div>
                            <a asp-page="Index">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
