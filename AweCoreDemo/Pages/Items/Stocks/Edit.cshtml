@page
@model AweCoreDemo.Pages.Items.Stocks.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<h1>Edit</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Stock.StockID" />
            <div class="form-group">
                <label asp-for="Stock.ItemName" class="control-label"></label>
                <input asp-for="Stock.ItemName" class="form-control" />
                <span asp-validation-for="Stock.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.Quantity" class="control-label"></label>
                <input asp-for="Stock.Quantity" class="form-control" />
                <span asp-validation-for="Stock.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.ItemID" class="control-label"></label>
                <select asp-for="Stock.ItemID" class="form-control" asp-items="ViewBag.ItemID"></select>
                <span asp-validation-for="Stock.ItemID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.DepartmentID" class="control-label"></label>
                <select asp-for="Stock.DepartmentID" class="form-control" asp-items="ViewBag.DepartmentID"></select>
                <span asp-validation-for="Stock.DepartmentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.Description" class="control-label"></label>
                <input asp-for="Stock.Description" class="form-control" />
                <span asp-validation-for="Stock.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
