@page
@model DemoHms.Pages.Items.ItemUnits.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Home.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemUnit[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemUnit[0].Abbreviation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ItemUnit) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abbreviation)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ItemUnitID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ItemUnitID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ItemUnitID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
